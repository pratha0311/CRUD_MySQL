    <label for="name"><b>Student name</b></label>
         <input type="text" placeholder="Enter Name" name="name" id="name" required>
 
    <label for="phn"><b>Phone no</b></label>
    <input type="phone" style="width:200px;" placeholder="type phone no to be searched" name="phone" id="phone" required>

    <label for="emailid"><b>Emailid</b></label>
    <input type="emailid" style="width:200px;" placeholder="emailid" name="emailid" id="emailid" required>
    
    <label for="password"><b>Password</b></label>
    <input type="password" style="width:200px;" placeholder="password" name="password" id="password" required>
    
    <div class="gender_g">
        <strong>Gender</strong>
        <input type="radio" name="gender" id="" value="Male"> Male
        <input type="radio" name="gender" id=""  value="Female">  Female
     </div>

    <button type="submit" class="registerbtn">UPDATE STUDENT</button>
    <a href="./" style="color:black">BACK TO HOME PAGE</a> <br>    
</form>
